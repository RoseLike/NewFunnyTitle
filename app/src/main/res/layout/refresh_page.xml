<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/refresh_ImagebuttonId"
        android:src="@mipmap/icon_more"
        android:alpha="1"
        android:layout_alignParentRight="true"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/refresh_tablayoutId"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/refresh_ImagebuttonId"
        android:layout_height="40dp"
        app:tabMode="scrollable"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/refresh_tablayoutId"
        android:id="@+id/FrushFragment_ViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</RelativeLayout>
