<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.design.widget.TabLayout
        android:id="@+id/video_tablayoutId"
        android:layout_width="match_parent"
        app:tabTextAppearance="@style/tablayout_size"
        app:tabMode="scrollable"
        app:tabIndicatorColor="#0f0"
        app:tabSelectedTextColor="#0f0"
        app:tabTextColor="#000"
        app:tabGravity="center"
        android:layout_height="40dp"></android.support.design.widget.TabLayout>
<android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/video_ViewPagerId"></android.support.v4.view.ViewPager>
</LinearLayout>
