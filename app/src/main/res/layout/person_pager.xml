                        android:layout_toRightOf="@id/im6Id"
                        android:layout_height="wrap_content"
                        android:text="收入排行" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/im7Id"
                        android:src="@drawable/icon_update_logo"/>
                    <TextView
                        android:id="@+id/user_jingpingyouxiId"
                        android:drawableRight="@drawable/icon_arrow_right_gray"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/im7Id"
                        android:layout_height="wrap_content"
                        android:text="精品游戏" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/im8Id"
                        android:src="@drawable/icon_person_gold"/>
                    <TextView
                        android:id="@+id/user_DuihuantixianaId"
                        android:drawableRight="@drawable/icon_arrow_right_gray"

                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/im8Id"
                        android:layout_height="wrap_content"
                        android:text="兑换提现" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/im9Id"
                        android:src="@drawable/icon_person_bardian"/>
                    <TextView
                        android:id="@+id/user_RuhrtixianId"
                        android:layout_width="match_parent"
                        android:drawableRight="@drawable/icon_arrow_right_gray"

                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/im9Id"
                        android:layout_height="wrap_content"
                        android:text="如何赚钱" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/im11Id"
                        android:src="@drawable/icon_news_item_read"/>
