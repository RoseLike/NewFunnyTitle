                        android:layout_height="wrap_content"
                        android:text="任务系统" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/im5Id"
                        android:src="@drawable/icon_person_income"/>
                    <TextView
                        android:id="@+id/user_ShouroumingxiId"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/icon_arrow_right_gray"

                        android:layout_toRightOf="@id/im5Id"
                        android:layout_height="wrap_content"
                        android:text="收入明细" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/im6Id"
                        android:src="@drawable/icon_main_tab_person_selected"/>
                    <TextView
                        android:id="@+id/user_ShouruPaihangId"
                        android:layout_width="match_parent"
