                        android:src="@drawable/icon_person_setting"/>
                    <TextView
                        android:id="@+id/user_ShezhiId"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/icon_arrow_right_gray"

                        android:layout_toRightOf="@id/im14Id"
                        android:layout_height="wrap_content"
                        android:text="设置" />
                </RelativeLayout>

            </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/user_Linerlaout1Id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|left"
                android:src="@drawable/icon_avatar_default" />

            <TextView
                android:id="@+id/user_nichengId"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/user_image"
                android:gravity="center"
                android:text="昵称"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/user_nichengId"
                android:gravity="center"
                android:text="用户登录界面"
                android:textSize="25sp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/user_nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:drawableLeft="@drawable/icon_login_phone"
            android:gravity="center|left"
            android:hint="手机号"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/user_passwardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:drawableLeft="@drawable/icon_login_pwd"
            android:gravity="center|left"
            android:hint="密码"
            android:inputType="textPassword"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/user_loadId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="登录"
                android:textColor="#6aa"
                android:textSize="40sp" />

            <Button
                android:id="@+id/user_InitInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="注册"
                android:textColor="#6aa"
                android:textSize="40sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="新用户注册可享受一元红包"
            android:textColor="#6aa"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/user_forgetpassworld"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="忘记密码？"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="三方授权登录"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/user_otherloadId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|right"
            android:src="@drawable/qq" />
    </LinearLayout>
